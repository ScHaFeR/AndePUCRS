<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pucrs.andepucrs.controller.FavoriteDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="De:"
        android:id="@+id/fromFavTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Para:"
        android:id="@+id/toFavTextView"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/fromFavTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-fazer a Rota"
        android:id="@+id/reDoRouteButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preferencias"
        android:id="@+id/prefFavoriteTextView"
        android:layout_below="@+id/toFavTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefListView"
        android:layout_below="@+id/prefFavoriteTextView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/reDoRouteButton" />

</RelativeLayout>
